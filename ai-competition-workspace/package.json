{
  "name": "ai-competition-workspace",
  "displayName": "AI Competition Workspace",
  "description": "AI Competition Workspace Manager",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiWorkspace.helloWorld",
        "title": "Hello World",
        "category": "AI Competition"
      },
      {
        "command": "aiWorkspace.createProject",
        "title": "Create New Project",
        "category": "AI Competition"
      },
      {
        "command": "aiWorkspace.refreshExplorer",
        "title": "Refresh",
        "category": "AI Competition",
        "icon": "$(refresh)"
      },
      {
        "command": "aiWorkspace.runExperiment",
        "title": "Run Experiment",
        "category": "AI Competition",
        "icon": "$(play)"
      },
      {
        "command": "aiWorkspace.viewDetails",
        "title": "View Details",
        "category": "AI Competition"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCompetition",
          "title": "AI Competition",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "aiCompetition": [
        {
          "id": "competitionExplorer",
          "name": "Competitions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiWorkspace.refreshExplorer",
          "when": "view == competitionExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aiWorkspace.runExperiment",
          "when": "view == competitionExplorer && viewItem == experiment",
          "group": "inline"
        },
        {
          "command": "aiWorkspace.viewDetails",
          "when": "view == competitionExplorer && viewItem == experiment"
        },
        {
          "command": "aiWorkspace.createProject",
          "when": "view == competitionExplorer && viewItem == competition"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}